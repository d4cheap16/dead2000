{
  "_design_notes": {
    "project_name": "Dead Don't Talk (Junior High 2000 Words Ver.)",
    "target_audience": "台灣國中生 (CEFR A1-A2+)",
    "core_mechanism": "Voice Recognition (Speech-to-Text)",
    "level": 1,
    "difficulty_focus": "Clear pronunciation, Basic Numbers, Family, Body parts",
    "word_selection_rules": {
      "source": "教育部國中參考字彙表 (2000字)",
      "filter_logic": "Speech-First Strategy (語音優先策略)",
      "exclude": [
        "單音節且易混淆字 (e.g., pen, bus, cat, one, two)",
        "發音特徵不明顯的短字 (e.g., at, it, of, in)",
        "同音異義字干擾強的字 (e.g., meat/meet, see/sea)",
        "純數字 (e.g., eleven, thirty) - 因語音辨識常轉為阿拉伯數字 (11, 30) 導致字串比對失敗"
      ],
      "include": [
        "多音節單字 (e.g., beautiful, tomato, vacation)",
        "發音響亮、清晰的雙音節字 (e.g., shoulder, tiger, market)",
        "長度較長但結構簡單的字 (e.g., afternoon, basketball)",
        "時間與頻率相關單字 (e.g., clock, future) - 替代數字以提升辨識率"
      ],
      "difficulty_progression": "Level 越高，單字音節越長、重音變化越複雜、詞意越抽象。"
    },
    "sentence_writing_rules": {
      "difficulty": "CEFR A1 ~ A2",
      "style": "Contextual & Descriptive (具體情境描述)",
      "formatting": "Sentence Case (Sentences MUST start with a Capital Letter)",
      "note": "Ensure sentences are natural to speak and contain target vocabulary."
    },
    "chinese_definition_rules": {
      "source_document": "國中2000字-依字母序1(列印版).pdf",
      "data_structure_change": "由 [\"word\"] 改為 [{\"en\": \"word\", \"zh\": \"中文 (pos)\"}]",
      "formatting_guide": {
        "pattern": "中文解釋 (詞性縮寫)",
        "pos_abbreviations": {
          "noun": "n.",
          "verb": "v.",
          "adjective": "adj.",
          "adverb": "adv.",
          "preposition": "prep.",
          "conjunction": "conj."
        },
        "examples": [
          "morning -> 早上 (n.)",
          "early -> 早的 (adj.)",
          "always -> 總是 (adv.)"
        ]
      },
      "note": "若有多個解釋，選取最常用且適合國中程度的定義。顯示時建議英文較大、中文較小(綠色)以利區分。"
    }
  },
