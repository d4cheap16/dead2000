  "_design_notes": {
    "project_name": "Dead Don't Talk (Junior High 2000 Words Ver.)",
    "target_audience": "台灣國中生 (CEFR A1-A2+)",
    "core_mechanism": "Voice Recognition (Speech-to-Text)",
    "level": 2,
    "difficulty_focus": "Multi-syllable words (3+ syllables), Adverbs, Emotions, Jobs",
    "word_selection_rules": {
      "source": "教育部國中參考字彙表 (2000字)",
      "filter_logic": "Speech-First Strategy (語音優先策略)",
      "exclude": [
        "Monosyllabic verbs (e.g., run, sit)",
        "Simple adjectives (e.g., hot, big)",
        "Pure numbers (e.g., one, two, six) - STT often converts these to digits (1, 2, 6) causing match failures"
      ],
      "include": [
        "Compound words (e.g., motorcycle)",
        "Words with specific stress (e.g., delicious)",
        "Adverbs of frequency"
      ]
    },
    "sentence_writing_rules": {
      "difficulty": "CEFR A2",
      "style": "Contextual & Descriptive",
      "formatting": "Sentence Case (Sentences MUST start with a Capital Letter)",
      "note": "Ensure sentences are natural to speak and contain target vocabulary without inducing digit output."
    }
  },
