  "_design_notes": {
    "project_name": "Dead Don't Talk (Junior High 2000 Words Ver.)",
    "target_audience": "台灣國中生 (CEFR A2-B1)",
    "core_mechanism": "Voice Recognition (Speech-to-Text)",
    "level": 3,
    "difficulty_focus": "Abstract Concepts, Social Issues, Advanced Verbs, Adjectives",
    "word_selection_rules": {
      "source": "教育部國中參考字彙表 (2000字)",
      "filter_logic": "Speech-First Strategy",
      "exclude": [
        "Common monosyllabic words (e.g., buy, pay, eat)",
        "Words with weak vowel sounds that are hard to detect"
      ],
      "include": [
        "Words with 3+ syllables (e.g., supermarket, government)",
        "Words ending in -tion, -ment, -ing (e.g., pollution, meeting)",
        "Adverbs and abstract nouns"
      ]
    },
    "sentence_writing_rules": {
      "difficulty": "CEFR A2 ~ B1",
      "style": "Complex & Compound Sentences",
      "formatting": "Sentence Case (Sentences MUST start with a Capital Letter)",
      "note": "Sentences should reflect social interactions or describe abstract situations."
    }
  },
