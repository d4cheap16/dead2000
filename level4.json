  "_design_notes": {
    "project_name": "Dead Don't Talk (Junior High 2000 Words Ver.)",
    "target_audience": "台灣國中生 (CEFR B1)",
    "core_mechanism": "Voice Recognition (Speech-to-Text)",
    "level": 4,
    "difficulty_focus": "Complex Adjectives, Advanced Verbs, Abstract Nouns (-tion/-ment)",
    "word_selection_rules": {
      "source": "教育部國中參考字彙表 (2000字)",
      "filter_logic": "Speech-First Strategy",
      "exclude": ["Simple CVC words", "Words easily confused with common short words"],
      "include": ["Words with suffixes (-tion, -ment, -ful, -less, -able)", "Compound words", "3-5 syllable words"]
    },
    "sentence_writing_rules": {
      "difficulty": "CEFR B1",
      "style": "Compound & Complex Sentences (If/When/Because/Although)",
      "formatting": "Sentence Case (Sentences MUST start with a Capital Letter)",
      "note": "Sentences should require sustained pronunciation flow (10-15 words)."
    }
